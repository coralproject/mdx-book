{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "jsx": "react",
    "noEmit": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noErrorTruncation": true,
    "baseUrl": ".",
    "paths": {
      "@coralproject/mdx-book": ["../src/index.ts"],
      "@coralproject/mdx-book/*": ["../src/*"]
    }
  },
  "include": [
    "./**/*.tsx",
    "./**/*.d.ts",
    "./**/*.js"
  ],
  "exclude": ["node_modules"]
}
